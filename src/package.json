{
  "name": "break-glb",
  "version": "1.0.0",
  "description": "Professional React component for 3D GLB models with physics-based exploded view animations, part selection, and interactive controls",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks.d.ts",
      "import": "./dist/hooks.mjs",
      "require": "./dist/hooks.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.mjs",
      "require": "./dist/utils.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.mjs",
      "require": "./dist/types.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "react-component",
    "3d",
    "3d-viewer",
    "glb",
    "gltf",
    "threejs",
    "three.js",
    "exploded-view",
    "3d-model",
    "model-viewer",
    "viewer",
    "component",
    "cad",
    "engineering",
    "visualization",
    "interactive",
    "physics",
    "animation",
    "typescript"
  ],
  "author": "break-glb contributors",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "three": "^0.150.0",
    "@react-three/fiber": "^8.0.0",
    "@react-three/drei": "^9.0.0"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/three": "^0.169.0",
    "tsup": "^8.0.0",
    "typescript": "^5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ltastefinger/break-glb.git"
  },
  "bugs": {
    "url": "https://github.com/ltastefinger/break-glb/issues"
  },
  "homepage": "https://github.com/ltastefinger/break-glb#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "sideEffects": false
}
