{
  "name": "break-glb",
  "version": "1.0.0",
  "description": "A React component for rendering 3D GLB models with exploded view animations",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format cjs,esm --dts --external react --external react-dom --external three --external @react-three/fiber --external @react-three/drei"
  },
  "keywords": [
    "react",
    "3d",
    "glb",
    "gltf",
    "three.js",
    "exploded-view",
    "3d-model",
    "viewer",
    "component"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "three": "^0.150.0",
    "@react-three/fiber": "^8.0.0",
    "@react-three/drei": "^9.0.0"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/three": "^0.150.0",
    "tsup": "^8.0.0",
    "typescript": "^5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ltastefinger/break-glb.git"
  },
  "bugs": {
    "url": "https://github.com/ltastefinger/break-glb/issues"
  },
  "homepage": "https://github.com/ltastefinger/break-glb#readme"
